



VariantDir('build','coolgameyo', duplicate=0)
env = Environment();


names = """
main Block Chunk Game Sector Tile
Util World WorldGenerator UnitModule Unit
PathModule
"""

files = ["build/%s.cpp"%s for s in names.split()];


env.Program("gameroot/coolgameyo", files, 
        LIBS=['Irrlicht'], CPPFLAGS=['-std=c++0x', '-g']);
